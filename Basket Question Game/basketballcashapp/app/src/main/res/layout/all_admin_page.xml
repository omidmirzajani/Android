<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kobe_penalty"/>
    <ImageView
        android:onClick="BackIconClicked"
        android:id="@+id/backIconnnn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"/>
    <Button
        android:layout_below="@id/backIconnnn"
        android:onClick="InsertQuestion"
        android:id="@+id/insertQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:text="Inserting Questions"
        android:textAllCaps="false"/>
    <Button
        android:onClick="ShowUserInfo"
        android:layout_below="@id/insertQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:text="Users Information"
        android:textAllCaps="false"/>
</RelativeLayout>