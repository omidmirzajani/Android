<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/Firstpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login_background"/>
        <ImageView
            android:onClick="BackIconClicked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_home_24"/>
        <androidx.cardview.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/my_cardview"
            android:layout_width="match_parent"
            android:layout_margin="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:outlineAmbientShadowColor="#fff"
            android:outlineSpotShadowColor="#fff"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/logintoyouraccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:text="Register an account"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/Registerusernameonly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/logintoyouraccount"/>
                <EditText
                    android:id="@+id/RegisteruserEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Registerusernameonly"
                    android:background="@drawable/my_edittext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/RegisterPasswordnameonly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/RegisteruserEdittext"/>
                <EditText
                    android:id="@+id/RegisterPasswordEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RegisterPasswordnameonly"
                    android:background="@drawable/my_edittext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/RepeatRegisterPasswordnameonly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat password"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/RegisterPasswordEdittext"/>
                <EditText
                    android:id="@+id/RepeatRegisterPasswordEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RepeatRegisterPasswordnameonly"
                    android:background="@drawable/my_edittext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"/>
                <Button
                    android:onClick="RegisterAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/RepeatRegisterPasswordEdittext"
                    android:layout_marginBottom="20dp"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:background="@drawable/signinbutton"/>
                <TextView
                    android:id="@+id/takenUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorry, this username is already taken"
                    android:textColor="#FF0000"
                    android:layout_below="@id/RegisteruserEdittext"
                    android:layout_marginLeft="10dp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/CorrectUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This username is available"
                    android:textColor="#02B302"
                    android:layout_below="@id/RegisteruserEdittext"
                    android:layout_marginLeft="10dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
